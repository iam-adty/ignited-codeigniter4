{
	"name": "iam-adty/ignited-codeigniter4",
	"type": "project",
	"description": "Ignited CodeIgniter4 starter app",
	"license": "MIT",
	"require": {
		"php": ">=7.2",
        "codeigniter4/framework": "^4",
        "slowprog/composer-copy-file": "~0.3",
        "almasaeed2010/adminlte": "~3.0"
	},
	"require-dev": {
		"mikey179/vfsstream": "1.6.*",
        "phpunit/phpunit": "8.5.*"
	},
	"autoload-dev": {
		"psr-4": {
			"Tests\\Support\\": "tests/_support"
		}
	},
	"scripts": {
		"test": "phpunit",
        "post-install-cmd": [
            "SlowProg\\CopyFile\\ScriptHandler::copy"
        ],
        "post-update-cmd": [
            "@composer dump-autoload",
            "SlowProg\\CopyFile\\ScriptHandler::copy"
        ]
    },
    "extra": {
        "copy-file": {
            "vendor/almasaeed2010/adminlte/dist/": "public/assets/vendor/adminlte/",
            "vendor/almasaeed2010/adminlte/plugins/": "public/assets/vendor/adminlte/plugins/"
        }
    }
}
